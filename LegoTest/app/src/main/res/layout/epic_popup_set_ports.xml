<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/closePopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:elevation="5dp"
        android:layout_alignParentRight="true"/>

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <TextView
                        android:id="@+id/motor1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25sp"
                        android:layout_marginRight="20sp"
                        android:text="Motor1"
                        android:textAlignment="inherit"
                        android:textSize="18sp"
                        android:textStyle="bold" />



                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20sp" />



                    <TextView
                        android:id="@+id/motor2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25sp"
                        android:layout_marginRight="20sp"
                        android:text="Motor2"
                        android:textAlignment="inherit"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20sp" />



                    <TextView
                        android:id="@+id/color_sensor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25sp"
                        android:layout_marginRight="20sp"
                        android:text="Color Sensor"
                        android:textAlignment="inherit"
                        android:textSize="18sp"
                        android:textStyle="bold" />




                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20sp" />


                    <TextView
                        android:id="@+id/gyro_sensor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25sp"
                        android:layout_marginRight="20sp"
                        android:text="Gyro Sensor"
                        android:textAlignment="inherit"
                        android:textSize="18sp"
                        android:textStyle="bold" />



                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20sp" />



                    <TextView
                        android:id="@+id/touch_sensor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25sp"
                        android:layout_marginRight="20sp"
                        android:text="Touch Sensor"
                        android:textAlignment="inherit"
                        android:textSize="18sp"
                        android:textStyle="bold" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="200sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <Spinner
                android:id="@+id/spinner_motor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <Spinner
                android:id="@+id/spinner_motor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <Spinner
                android:id="@+id/spinner_color_sensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <Spinner
                android:id="@+id/spinner_gyro_sensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <Spinner
                android:id="@+id/spinner_touch_sensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>