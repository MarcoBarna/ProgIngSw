<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBackground"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context=".ManualDriveActivity"
    android:configChanges="orientation"
    android:screenOrientation="portrait">

    <ImageButton
        android:id="@+id/up"
        android:layout_width="206dp"
        android:layout_height="112dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:contentDescription="@string/go_up" />

    <ImageButton
        android:id="@+id/left"
        android:layout_width="192dp"
        android:layout_height="112dp"
        app:layout_constraintBottom_toTopOf="@+id/down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:contentDescription="@string/go_left" />

    <ImageButton
        android:id="@+id/right"
        android:layout_width="192dp"
        android:layout_height="112dp"
        app:layout_constraintBottom_toTopOf="@+id/down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:contentDescription="@string/go_right" />

    <ImageButton
        android:id="@+id/down"
        android:layout_width="204dp"
        android:layout_height="118dp"
        android:layout_marginTop="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up"
        app:srcCompat="@android:drawable/arrow_down_float"
        android:contentDescription="@string/go_down" />

    <TextView
        android:id="@+id/textUP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/up_text"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/up"
        app:layout_constraintEnd_toEndOf="@+id/up"
        app:layout_constraintStart_toStartOf="@+id/up"
        app:layout_constraintTop_toTopOf="@+id/up"
        tools:text="UP " />

    <TextView
        android:id="@+id/textDOWN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/down_text"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/down"
        app:layout_constraintEnd_toEndOf="@+id/down"
        app:layout_constraintStart_toStartOf="@+id/down"
        app:layout_constraintTop_toTopOf="@+id/down"
        tools:text="DOWN" />

    <TextView
        android:id="@+id/textgyro"
        android:layout_width="227dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/gyro_placeholder"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sensorup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/sensorup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sensordown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/sensordown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toEndOf="@+id/sensorup" />

</android.support.constraint.ConstraintLayout>