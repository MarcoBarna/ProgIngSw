<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background1"
    android:configChanges="orientation"
    android:screenOrientation="portrait"
    android:theme="@style/ThemeOverlay.AppCompat"
    tools:context=".FAQsActivity">

    <Button
        android:id="@+id/buttonFAQ1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="buttonFAQ1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFAQ2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonFAQ2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="buttonFAQ2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFAQ3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFAQ1" />

    <Button
        android:id="@+id/buttonFAQ3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="buttonFAQ3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFAQ4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFAQ2" />

    <Button
        android:id="@+id/buttonFAQ4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="buttonFAQ4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFAQ3" />

</android.support.constraint.ConstraintLayout>